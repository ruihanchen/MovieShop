@model ApplicationCore.Model.PagedResultSetModel<ApplicationCore.Model.MovieCardModel>

<div class="rounded">
    <div class="container bg-light">
        <div class="row">
            @foreach (var movie in Model.PagedData)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">

                    <partial name="_MovieCard" model="movie" />
                </div>

            }
        </div>
    </div>
</div>

@{
    var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a class="btn btn-primary @previousDisabled" asp-action="Genre" asp-controller="Movie" asp-route-pageNumber="@(Model.PageNumber-1)">
    Previous
</a>

<a class="btn btn-primary @nextDisabled" asp-action="Genre" asp-controller="Movie" asp-route-pageNumber="@(Model.PageNumber + 1)">
    Next
</a>